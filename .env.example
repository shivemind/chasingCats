# Environment variables for Chasing Cats Club

# NextAuth configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Database connection (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/chasingcats
# Optional direct connection string (e.g., Vercel non-pooling URL)
# POSTGRES_URL_NON_POOLING=postgresql://user:password@localhost:5432/chasingcats

# Stripe configuration
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_MONTHLY_PRICE_ID=price_monthly_id
STRIPE_ANNUAL_PRICE_ID=price_annual_id
STRIPE_SUCCESS_URL=http://localhost:3000/account
STRIPE_CANCEL_URL=http://localhost:3000/join
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

